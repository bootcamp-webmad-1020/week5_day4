<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Subir imagen en local</h1>
            <hr>
            <form method="POST" action="/file-upload-local" enctype="multipart/form-data">
                <div class='form-group'>
                    <label for='imageName'>Nombre</label>
                    <input name='imageName' type='text' class='form-control' id='imageName'>
                </div>
                <div class='form-group'>
                    <div class="custom-file">
                        <input name="imageFile" type="file" class="custom-file-input" id="imageFile">
                        <label class="custom-file-label" for="imageFile">Seleccionar imagen</label>
                    </div>
                </div>

                <button type='submit' class='btn btn-dark btn-block'>Subir imagen</button>
            </form>

        </div>
    </div>

</div>